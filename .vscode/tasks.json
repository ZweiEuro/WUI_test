{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "setup build",
            "type": "shell",
            "command": "cd ${workspaceFolder} && mkdir -p '${workspaceFolder}/build' && cd ${workspaceFolder}/build && cmake -G 'Ninja' -DCMAKE_BUILD_TYPE=Debug .. && ninja -j8",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cd '${workspaceFolder}/build' && ninja webUI -j8",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "cd '${workspaceFolder}/build' && ./webUI/Debug/webUI",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build and run",
            "type": "shell",
            "command": "cd '${workspaceFolder}/build' && ninja webUI -j8 && ./webUI/Debug/webUI",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}