{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "setup build",
            "type": "shell",
            "command": "cd ${workspaceFolder} && mkdir -p '${workspaceFolder}/build' && if [[ ! -e '${workspaceFolder}/build/res' ]]; then ln -ns '${workspaceFolder}/res' '${workspaceFolder}/build/res'; fi && cd ${workspaceFolder}/build && cmake .. && make . -j8",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cd '${workspaceFolder}/build' && make -j8",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "cd '${workspaceFolder}/build' && ./OffscreenUI_test"
        },
        {
            "label": "build and run",
            "type": "shell",
            "command": "cd '${workspaceFolder}/build' && make -j8 && ./OffscreenUI_test",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}